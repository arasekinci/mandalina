{
  "name": "ponsetya",
  "version": "1.0.0",
  "scripts": {
    "docs:dev": "yarn workspace docs dev",
    "docs:build": "yarn workspace docs build",
    "docs:start": "yarn workspace docs start",
    "docs:lint": "yarn workspace docs lint",
    "packages:build": "lerna run build --scope=@ponsetya/*",
    "packages:lint": "lerna run lint --scope=@ponsetya/*",
    "packages:test": "lerna run test --scope=@ponsetya/*",
    "dev": "yarn docs:dev",
    "build": "yarn packages:build && yarn docs:build",
    "start": "yarn docs:start",
    "lint": "yarn packages:lint && yarn docs:lint",
    "postinstall": "yarn husky install"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/jest": "^29.2.6",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "lerna": "^6.5.1",
    "prettier": "^2.8.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "workspaces": [
    "docs",
    "packages/*"
  ],
  "private": true
}