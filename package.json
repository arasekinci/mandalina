{
  "name": "ponsetya",
  "scripts": {
    "build:docs": "pnpm --filter docs build",
    "build:packages": "pnpm -r run build",
    "build": "pnpm build:packages && pnpm build:docs",
    "dev:docs": "pnpm --filter docs dev",
    "dev": "pnpm dev:docs",
    "lint:docs": "pnpm --filter docs lint",
    "lint:packages": "pnpm -r run lint",
    "lint": "pnpm lint:packages && pnpm lint:docs",
    "start:docs": "pnpm --filter docs start",
    "start": "pnpm start:docs",
    "test:packages": "pnpm -r run test",
    "test": "pnpm test:packages",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.7",
    "@babel/preset-typescript": "^7.23.3",
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.1",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "private": true,
  "packageManager": "pnpm@9.10.0"
}
