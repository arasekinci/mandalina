{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "@typescript-eslint",
    "tsdoc"
  ],
  "overrides": [
    {
      "env": {
        "jest": true
      },
      "extends": [
        "plugin:jest/recommended"
      ],
      "files": [
        "**/*.test.ts"
      ]
    }
  ],
  "rules": {
    "tsdoc/syntax": "error"
  }
}
